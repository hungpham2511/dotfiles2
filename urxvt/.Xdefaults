!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! xterm: scrollback buffer size
xterm*SaveLines:            5000

! Fonts
! simple font 
URxvt.allow_bold:           false
URxvt*font:                 xft:Monospace:pixelsize=14


! Fix font space
URxvt*letterSpace:          -1

! Scrollbar
URxvt.scrollStyle:          plain
URxvt.scrollBar:            false

! Scrolling command
! See number 5? that is the number of line to scroll For more detail,
! check this link:
! https://www.systutorials.com/docs/linux/man/7-urxvt/

! URxvt.keysym.C-i: command:\033]720;5\007
! URxvt.keysym.C-d: command:\033]721;5\007

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          google-chrome

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

